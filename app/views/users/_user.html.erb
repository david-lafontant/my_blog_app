<li class="list-group-item my-3 d-flex justify-content-around align-items-center flex-wrap gap-2 border-top">

  <a href="/users/<%= user.id %>">
    <%= content_tag(:div, tag.img(src: user.photo, alt: "#{user.name}'s photo", width: '150px'), class: 'card') %>
  </a>

  <h2><%= user.name %></h2>

  <button type="button" class="btn btn-primary align-self-end">
    Number of posts:
    <span class="badge bg-secondary">
      <%= user.post_counter ? user.post_counter : 0 %>
    </span>
  </button>

</li>